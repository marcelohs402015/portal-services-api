{
  "client_api_examples": {
    "description": "Exemplos de requests para a API de Clientes - Portal Services",
    "base_url": "http://localhost:3001/api",
    
    "create_client": {
      "method": "POST",
      "url": "{{base_url}}/clients",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "name": "João da Silva",
        "email": "joao@teste.com",
        "phone": "11999999999",
        "phone_secondary": "1133333333",
        "address": "Rua das Flores, 123 - Centro",
        "city": "São Paulo",
        "state": "SP",
        "zip_code": "01234-567",
        "document": "123.456.789-00",
        "document_type": "cpf",
        "notes": "Cliente preferencial"
      },
      "expected_response": {
        "success": true,
        "data": {
          "id": "uuid-gerado-automaticamente",
          "name": "João da Silva",
          "email": "joao@teste.com",
          "phone": "11999999999",
          "phone_secondary": "1133333333",
          "address": "Rua das Flores, 123 - Centro",
          "city": "São Paulo",
          "state": "SP",
          "zip_code": "01234-567",
          "document": "123.456.789-00",
          "document_type": "cpf",
          "notes": "Cliente preferencial",
          "active": true,
          "created_at": "2025-09-14T16:00:00.000Z",
          "updated_at": "2025-09-14T16:00:00.000Z"
        }
      }
    },

    "get_all_clients": {

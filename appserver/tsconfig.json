{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowImportingTsExtensions": false,
    "allowJs": true
  },
  "include": [
    "server.ts",
    "types/**/*.ts",
    "database/**/*.ts",
    "repositories/**/*.ts",
    "services/**/*.ts",
    "routes/**/*.ts",
    "shared/**/*.ts",
    "controllers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.bak",
    "**/*.bak"
  ]
}
# Portal Services API - Environment Variables
# Copy this file to .env and configure your values

# Server Configuration
NODE_ENV=development
PORT=3001
APP_VERSION=2.0.0
FEATURES=email-management,service-management,quotations

# Database Configuration (Individual variables)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portalservicesdb
DB_USER=admin
DB_PASSWORD=admin
DB_SSL=false

# Database Configuration (Connection String - for production)
# DATABASE_URL=postgresql://user:password@host:port/database

# Client Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration (if using email features)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=your-email@gmail.com

# API Key Configuration (for N8N integration)
# API_KEYS_ENABLED=true

# Google APIs (if using Google services)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Logging
LOG_LEVEL=info

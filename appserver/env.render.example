# Portal Services API - Environment Variables for Render
# Estas variáveis serão configuradas no painel do Render

# Server Configuration
NODE_ENV=production
PORT=3001
APP_VERSION=2.0.0
FEATURES=email-management,service-management,quotations

# Database Configuration (Render PostgreSQL)
# Estas variáveis serão fornecidas automaticamente pelo Render
# DB_HOST=dpg-xxxxx-a.oregon-postgres.render.com
# DB_PORT=5432
# DB_NAME=portalservicesdb_xxxx
# DB_USER=portalservicesdb_user
# DB_PASSWORD=your_password_here
DB_SSL=true

# Database Configuration (Connection String - preferida para Render)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Client Configuration
CLIENT_URL=https://your-frontend-domain.com

# API Key Configuration (for N8N integration)
API_KEYS_ENABLED=true

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

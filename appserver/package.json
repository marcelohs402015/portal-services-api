{
  "name": "portal-services-server",
  "version": "2.0.0",
  "description": "Backend server para sistema de gestão de serviços e orçamentos",
  "main": "server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "build": "tsc -p tsconfig.production.json && echo 'Build completed successfully' && ls -la dist/",
    "build:clean": "rm -rf dist && npm run build",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "postbuild": "echo 'Post-build: Checking compiled files' && ls -la dist/ && echo 'Build verification completed'",
    "prestart": "echo 'Starting server...' && node -e \"console.log('Node version:', process.version)\""
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "googleapis": "^129.0.0",
    "inquirer": "^12.9.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.4",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}

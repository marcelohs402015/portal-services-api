{
  "name": "portal-services",
  "version": "2.0.0",
  "description": "Sistema de gestão de serviços e orçamentos para prestadores de serviços com automação de emails",
  "main": "appserver/dist/server.js",
  "scripts": {
    "dev": "cd appserver && npm run dev",
    "start": "cd appserver && npm start",

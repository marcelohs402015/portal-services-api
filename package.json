{
  "name": "portal-services",
  "version": "2.0.0",
  "description": "Sistema de gestão de serviços e orçamentos para prestadores de serviços com automação de emails",
  "main": "appserver/dist/server.js",
  "scripts": {
    "dev": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose up --build",
    "dev:detached": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose up --build -d",
    "dev:stop": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose down",
    "dev:restart": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose restart",
    "dev:logs": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose logs -f",
    "dev:clean": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose down -v && docker system prune -f",
    "db:start": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose up -d db",
    "db:stop": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose stop db",
    "db:restart": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose restart db",
    "db:logs": "export PATH=\"$HOME/.local/bin:$PATH\" && docker-compose logs -f db",
    "server:dev": "cd appserver && npm run dev:local",
    "server": "cd appserver && npm run dev",
    "install:all": "npm install && cd appserver && npm install",
    "install:windows": "install-windows.bat",
    "build": "npm run build:server",
    "build:server": "cd appserver && npm run build",
    "start": "cd appserver && npm start",
    "typecheck": "cd appserver && npm run typecheck",
    "test": "cd appserver && npm test",
    "setup": "cd appserver && npm run setup",
    "deploy:prepare": "npm run typecheck && npm run build",
    "init-db": "node appserver/scripts/init-database.js",
    "init-db:production": "node appserver/scripts/init-production-db.js",
    "test:render-config": "node test-render-config.js",
    "build:render": "docker build -f Dockerfile.render -t portal-services-render .",
    "deploy:render": "./deploy-render-yaml.sh"
  },
  "keywords": [
    "portal-services",
    "services",
    "quotation",
    "automation",
    "typescript",
    "business-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "googleapis": "^129.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "tsx": "^4.20.4",
    "typescript": "^5.3.2"
  }
}

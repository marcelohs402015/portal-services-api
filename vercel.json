{
  "version": 2,
  "builds": [
    {
      "src": "appserver/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["appserver/**"]
      }
    },
    {
      "src": "appclient/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/appserver/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/appclient/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "appserver/server.ts": {
      "maxDuration": 30
    }
  },
  "buildCommand": "npm run build",
  "installCommand": "npm run install:all"
}
